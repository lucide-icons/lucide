{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
  }
}
