{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "lib": ["es2019", "DOM"],
    "allowJs": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
  },
  "exclude": ["node_modules"],
}
